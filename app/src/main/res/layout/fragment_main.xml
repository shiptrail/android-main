<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".fragments.TrackListFragment"
    tools:showIn="@layout/activity_main">

    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/track_me"
        android:id="@+id/button_track_me"
        android:background="@drawable/rounded_button_selector"
        android:minWidth="220dp"
        android:minHeight="220dp"
        android:maxWidth="80dp"
        android:maxHeight="80dp"
        android:textColor="@color/colorPrimaryText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lng_label"
        android:id="@+id/textViewLngLabel"
        android:layout_below="@+id/button_track_me"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/unknown_value"
        android:id="@+id/textViewLng"
        android:layout_below="@+id/textViewLngLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lat_label"
        android:id="@+id/textViewLatLabel"
        android:layout_below="@+id/button_track_me"
        android:layout_alignRight="@+id/textViewLat"
        android:layout_alignEnd="@+id/textViewLat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/unknown_value"
        android:id="@+id/textViewLat"
        android:layout_below="@+id/textViewLatLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bearing_label"
        android:id="@+id/textViewBearingLabel"
        android:layout_below="@+id/textViewLng"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/unknown_value"
        android:id="@+id/textViewBearing"
        android:layout_below="@+id/textViewBearingLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/speed_label"
        android:id="@+id/textViewSpeedLabel"
        android:layout_above="@+id/textViewSpeed"
        android:layout_alignLeft="@+id/textViewLatLabel"
        android:layout_alignStart="@+id/textViewLatLabel"
        android:layout_alignRight="@+id/textViewLat"
        android:layout_alignEnd="@+id/textViewLat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/unknown_value"
        android:id="@+id/textViewSpeed"
        android:layout_below="@+id/textViewBearingLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accuracy_label"
        android:id="@+id/textViewAccuracyLabel"
        android:layout_below="@+id/textViewBearing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/unknown_value"
        android:id="@+id/textViewAccuracy"
        android:layout_below="@+id/textViewAccuracyLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/satellites_label"
        android:id="@+id/textViewSatellitesLabel"
        android:layout_below="@+id/textViewSpeed"
        android:layout_alignRight="@+id/textViewSpeedLabel"
        android:layout_alignEnd="@+id/textViewSpeedLabel"
        android:layout_toRightOf="@+id/button_track_me"
        android:layout_toEndOf="@+id/button_track_me" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/unknown_value"
        android:id="@+id/textViewSatellites"
        android:layout_alignTop="@+id/textViewAccuracy"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/activity_main_textview_bearing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_bearing"
        android:layout_alignTop="@id/textViewLng"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/activity_main_textview_pitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_pitch"
        android:layout_alignTop="@id/textViewBearing"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/activity_main_textview_roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_roll"
        android:layout_alignTop="@id/textViewAccuracy"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
